<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1">

    <TableRow>
        <ImageView
            android:id="@+id/fb_icon"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:padding="1dip"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_facebook" />

        <TextView
            android:layout_gravity="center_vertical"
            android:text="Facebook"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/fb_points"
            android:layout_gravity="center_vertical"
            android:text="-"
            android:gravity="right"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:textSize="17sp" />
    </TableRow>

    <TableRow>
        <ImageView
            android:id="@+id/tw_icon"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:padding="1dip"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_twitterbird" />

        <TextView
            android:layout_gravity="center_vertical"
            android:text="Twitter"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/tw_points"
            android:layout_gravity="center_vertical"
            android:text="-"
            android:gravity="right"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:textSize="17sp" />
    </TableRow>

    <TableRow>
        <ImageView
            android:id="@+id/email_icon"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:padding="1dip"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_envelope" />

        <TextView
            android:layout_gravity="center_vertical"
            android:text="Email"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/email_points"
            android:layout_gravity="center_vertical"
            android:text="-"
            android:gravity="right"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:textSize="17sp" />
    </TableRow>

    <TableRow>
        <ImageView
            android:id="@+id/sms_icon"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:padding="1dip"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_speechbubble" />

        <TextView
            android:layout_gravity="center_vertical"
            android:text="SMS"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/sms_points"
            android:layout_gravity="center_vertical"
            android:text="-"
            android:gravity="right"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:textSize="17sp" />
    </TableRow>
</TableLayout>
